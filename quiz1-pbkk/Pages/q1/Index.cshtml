@page
@model quiz1_pbkk.Pages.q1.Index

@{
    Layout = "Shared/_Layout";
    var repeat = 10;
}

<div style="border: 1px solid red; padding: 3rem 7rem 3rem 7rem;">
    <div style="border: 1px solid greenyellow;" class="row px-5">
        <div style="border: 1px solid pink;" class="col section-1-left">
            <p class="section-1-left-title">Find the best experience of transactions.</p>
            <p class="section-1-left-subtitle">Providing easy to use feature with various benefits at no cost. Anywhere, anytime, one click away.</p>
        </div>
        <div style="border: 1px solid sandybrown" class="col section-1-right">
            <object style="height: 35rem;" type="image/svg+xml" data="~/image/finance-app.svg"></object>
        </div>
    </div>
</div>

<div style="border: 1px solid red; padding: 4rem 7rem 4rem 7rem;">
    <div class="row">
        <p class="text-center section-2-title">Why we're different</p>
    </div>
    
    <div style="border: 1px solid greenyellow;" class="row px-5 mt-5">
        <div style="border: 1px solid pink;" class="col section-2-content-container section-2-left">
            <img class="section-2-img" src="image/credit-card.png"/>
            <p class="section-2-subtitle">Perzonalize your Card</p>
            <p class="section-2-caption">Fully customizable card that you can edit freely, custom your own card based on your preference.
</p>
        </div>
        <div style="border: 1px solid sandybrown" class="col section-2-content-container section-2-middle">
            <img class="section-2-img" src="image/money-sack.png"/>
            <p class="section-2-subtitle">Zero Fee</p>
            <p class="section-2-caption">Make your payment across the world without worrying about any fee.</p>
        </div>
        <div style="border: 1px solid #0aff32" class="col section-2-content-container section-2-right">
            <img class="section-2-img" src="image/bank.png"/>
            <p class="section-2-subtitle">All in one place</p>
            <p class="section-2-caption">Ready to link any bank or financial institution for your transaction and money management needs into our Apps.</p>
        </div>
    </div>
</div>

@while(repeat >= 0) {
    var backgroundColor = "#0dcaf0";

    if (repeat % 2 != 0) {
        backgroundColor = "cadetblue";
    }
    
    <div style="background-color: @backgroundColor" class="text-center">
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
    </div>
    
    repeat--;
}